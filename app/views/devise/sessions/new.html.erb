<div class="row text-center">
  <div class="col-md-8 col-md-offset-2">
    <h1>Sign in</h1>
  </div>
</div>

<div class="row text-center">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <%= form_for(resource, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
       <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, class: "form-control input-lg", placeholder: "Password" %>
        </div>
        <div class="help-block text-left">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/>
          <%= link_to "Resend confirmation email", new_user_confirmation_path %><br/>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-group  text-left"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div class="form-group"><%= f.submit "Sign in", class: "btn-lg btn-primary btn-block" %></div>
    <% end %>
  </div>
</div>