<div class="row text-center">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>Forgot Password</h1>
  </div>
</div>

<div class="row text-center">
  <div class="col-sm-4 col-sm-offset-4">
    <p>Forgot your password? Provide your email address below and we'll send it to you.</p>
  </div>
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <%= form_for(resource, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email", autofocus: true %>
        </div>
      </div>  
      
      <div class="form-group"><%= f.submit "Submit", class: "btn-lg btn-primary btn-block" %></div>
    <% end %>
  </div>
</div>